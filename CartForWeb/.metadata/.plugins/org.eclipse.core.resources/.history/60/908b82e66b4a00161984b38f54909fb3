	@Override
	public T read(int id) {
		T valueToBeSaved = target.read(id);
		/*map.replace(id, valueToBeSaved);*/
		/*map.replace(id, map.get(id), valueToBeSaved);*/
		T savedValue = map.putIfAbsent(id, valueToBeSaved);
		if(savedValue != null)
			return savedValue;
			else 
				return savedValue;
	}
	
