package com.syncron;

import java.util.ArrayList;
import java.util.Iterator;


public class EverySecondIterator<T> implements Iterator<T> {
	Iterator<T> iterator;
    public EverySecondIterator(Iterator<T> target) {
    	iterator = target;
    }

